{% extends "layout.njk" %}


{%block head%}
    <title>Receitas - Foodfy</title>
{%endblock%}

{% block content %} 

        <div class="new-recipe">
            <a href="/admin/recipes/create">Nova Receita</a>
        </div>
    
       <div class="recipes">
           {% for recipe in recipes %}
                <div class="recipe">
                    <div class="recipe-image">
                        <img src="{{recipe.image_url}}" alt="Imagem {{recipe.title_recipe}}">
                    </div>
                    <div class="infos">
                        <h4>{{recipe.title_recipe}}</h4>                            
                        <p class="autor">por {{recipe.author_recipe}}</p>
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>       
    

    <script src="/script.js"></script>

{% endblock %}